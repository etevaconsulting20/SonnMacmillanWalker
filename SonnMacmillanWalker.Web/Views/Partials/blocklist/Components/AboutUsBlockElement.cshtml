@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models;



@{
	var content = (ContentModels.AboutUsBlockElement)Model.Content;
 }

<div class="cardGridWrapper">
    <div class="container-fluid container-lg smw-container">
        <div class="row">
            <div class="col-sm-12">
                <div class="cardGrid">
                    <div class="blank">&nbsp;</div>
                    <div class="item-1">
                        <article class="article">
                            <p class="d-none d-lg-block smw-mb-8">About Us</p>
                            <h2 class="article__title">
                                @content.Value("aboutUsBlockElementTitle", fallback: Fallback.ToAncestors)
                            </h2>
                            <p class="article__content">
                                @content.Value("aboutUsBlockElementDescription", fallback: Fallback.ToAncestors)
                            </p>
                            <a href="about-us.html" class="button__blue text-decoration-none">About Us</a>
                        </article>
                    </div>
                    <div class="item-2">
                        <div class="cardGrid__img" style="background-image: url('./images/card-section.svg');">
                            <img class="card-section__image img-fluid d-block d-md-none w-100" src="~/images/card-section.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- card Grid Wrapper -->