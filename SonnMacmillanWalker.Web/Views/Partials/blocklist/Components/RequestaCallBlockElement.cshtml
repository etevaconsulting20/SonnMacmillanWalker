@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models;
@{
    var content = (ContentModels.RequestAcallBlockElement)Model.Content;
    var currentPage = UmbracoContext.PublishedRequest.PublishedContent;
    var documentTypeAlias = currentPage.ContentType.Alias;
}


@{
    var containerClass = (documentTypeAlias == "ourPeople") ? "notable-case-article-page" : "white-3-curve-top";
}

<div class="requestSections with-bg @containerClass">
    <div class="container-fluid container-lg smw-container">
        <div class="row">
            <div class="col-12">
                <div class="requestForm">
                    <article class="article text-center">
                        <h2 class="article__title">@content.Value("requestACallTitle", fallback: Fallback.ToAncestors)</h2>
                        <p>@content.Value("requestACallDescription", fallback: Fallback.ToAncestors)</p>
                    </article>
                    <div class="requestCall">
                        <form class="row gap-16">
                            <div class="d-flex flex-column flex-md-row gap-dmd-24">
                                <div class="col-md-6">
                                    <div class="smw-pr-md-12">
                                        <label for="name" class="form-label-name smw-btn-text">
                                            Name <span class="info-icon">ⓘ</span>
                                        </label>
                                        <input type="text" class="form-control p__small" id="name" placeholder="Input example">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="smw-pl-md-12">
                                        <label for="telephone" class="form-label smw-btn-text">
                                            Telephone number
                                        </label>
                                        <input type="tel" class="form-control p__small" id="telephone">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <label for="email" class="form-label smw-btn-text">Email</label>
                                <input type="text" class="form-control p__small" id="email" placeholder="">
                            </div>
                            <div class="col-12">
                                <label for="content" class="form-label smw-btn-text">What is your enquiry regarding?</label>
                                <textarea class="form-control-textarea p__small" id="content" name="enquiry" cols="50" rows="4"></textarea>
                                <!-- <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor"> -->
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="gridCheck">
                                    <label class="form-check-label p__small" for="gridCheck">
                                        If you consent to us using your personal data for that purpose please tick to confirm. For more information please visit our terms &amp; conditions and Privacy &amp; Cookies.
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="button__blue smart-animation">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- Request Call Section -->

